GET     /                   controllers.HomeController.index

POST /addNewArticle          controllers.HomeController.addNewArticle()

GET /getAllArticles         controllers.HomeController.getAllArticles

GET /getArticle/:id             controllers.HomeController.getArticle(id: String)

GET /removeArticle/:id      controllers.HomeController.removeArticle(id: String)

POST /updateArticle          controllers.HomeController.updateArticle

POST /addNewChapter          controllers.HomeController.addNewChapter()

GET /getAllChapters         controllers.HomeController.getAllChapters

GET /getChapter/:id             controllers.HomeController.getChapter(id: String)

GET /removeChapter/:id      controllers.HomeController.removeChapter(id: String)

POST /updateChapter          controllers.HomeController.updateChapter

GET /assets/*file           controllers.Assets.versioned(path="/public", file: Asset)